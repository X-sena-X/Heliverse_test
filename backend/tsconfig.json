{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"moduleResolution": "node",
		"removeComments": true,
		"sourceMap": false,
		"outDir": "./dist",
		"rootDir": "./src",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"allowJs": true,
		// "checkJs": true,
		"strict": false
	},
	"include": [
		"src",
		"src/db/init.ts",
		"./prisma/seed.ts"
	],
	"exclude": [
		"node_modules",
		"dist/*",
		"src/static"
	],
	"lib": [
		"es6"
	]
}