generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName  String
  email     String
  gender    String
  avatar    String
  domain    String
  available Boolean
  Team      Team?   @relation(fields: [teamId], references: [id])
  teamId    String? @db.ObjectId
}

model Team {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  members User[]
}
